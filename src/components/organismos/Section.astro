---
const { isBackgroundFoto = false, id, className } = Astro.props;
---

<section
  id={id}
  class={`relative min-h-screen flex items-center pt-16 ${className}`}
>
  <div
    class="absolute inset-0 bg-gradient-to-r from-primary-background via-primary-background/80 to-primary-background/70 z-10"
  >
  </div>
  {
    isBackgroundFoto && (
      <img
        src={"/hero-image.webp"}
        alt="Niño sonriendo después de cirugía de labio leporino"
        class="absolute inset-0 w-full h-full object-cover"
      />
    )
  }
  <div class="w-full relative z-20 mx-auto px-4 sm:px-6 lg:px-10">
    <slot />
  </div>
</section>
